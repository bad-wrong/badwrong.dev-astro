---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.vue";
import Footer from "../components/Footer.vue";
import ProductCard from "../components/ProductCard.astro";
---

<Layout title="Welcome to Astro.">
	<Header />
	<main>
		<div class="flex flex-grow flex-col justify-center">
			<section class="grid md:grid-cols-2 gap-x-8 gap-y-32 my-16 md:my-8">
				<ProductCard>
					<h1 slot="description">
						<a href="/baltic-energy/"
							>Electricity and natural gas market prices at your
							wristwatch</a
						>
					</h1>
					<a
						href="/baltic-energy/"
						title="Baltic Energy Apple Watch Application"
						slot="image"
					>
						<img
							src="/Baltic-Energy/v1.2/CurrentHour-44mm.png"
							srcset="/Baltic-Energy/v1.2/CurrentHour-44mm.png 1x, /Baltic-Energy/v1.2/CurrentHour-44mm@2x.png 2x"
							alt="Energy Live Apple Watch App"
						/>
					</a>
					<a
						href="/baltic-energy/"
						title="Baltic Energy Apple Watch Application"
						slot="app-name"
					>
						<div class="flex items-center justify-center -ml-8">
							<img
								class="object-scale-down h-12 mx-3"
								src="/Baltic-Energy/BalticEnergy.png"
								srcset="/Baltic-Energy/BalticEnergy.png 1x, /Baltic-Energy/BalticEnergy@2x.png 2x"
								alt="Baltic Energy App Icon"
							/>
							<span class="font-extrabold">Baltic Energy</span>
						</div>
					</a>
					<p slot="tagline">
						<small
							>Works in Estonia, Finland, Latvia and Lithuania</small
						>
					</p>
					<div slot="badge">
						<a
							href="https://apps.apple.com/us/app/baltic-energy/id1607203216"
							title="Get on App Store"
						>
							<img
								src="/Download-on-the-App-Store/US/Download_on_App_Store/White_lockup/SVG/Download_on_the_App_Store_Badge_US-UK_RGB_wht_092917.svg"
								alt="Download on App Store"
							/>
						</a>
					</div>
					<a
						class="font-normal opacity-50 hover:opacity-100"
						href="baltic-energy/privacy">Privacy Policy</a
					>
				</ProductCard>
			</section>
		</div>
	</main>
	<Footer />
</Layout>

