---
import Layout2 from "../layouts/Layout2.astro";
import { ProjectCard } from "../v2/components/ProjectCard.tsx";
import { Link } from "../v2/components/Link.tsx";
import { ExternalLink } from "lucide-react";
---

<Layout2 title="Bad & Wrong">
  <main id="projects">
    <header>
      <h1>Bad<span id="ampersand">&</span>Wrong</h1>
      <!-- <p><em>Selected projects</em></p> -->
    </header>
    <h2>Select projects</h2>
    <ProjectCard
      client:load
      className="card--tall"
      imageFit="contain"
      images={[
        "/images/Public-Records/PublicRecords-1.png",
        "/images/Public-Records/PublicRecords-2.png",
        "/images/Public-Records/PublicRecords-3.png",
        "/images/Public-Records/PublicRecords-4.png",
      ]}
    >
      <h3>Publicly available audiobooks narrated by LibriVox volunteers</h3>
      <footer>iOS programming</footer>
    </ProjectCard>
    <ProjectCard
      client:load
      images={["/images/EasyBrackets/vscode.svg"]}
      imageFit="contain"
      imageWidth={40}
    >
      <h3>
        Visual Studio Code extension to replace brackets and quotes instead of
        inserting a new pair
      </h3>
      <footer>
        <Link
          text="Go to Marketplace"
          title="Go to VisualStudio Marketplace"
          href="https://marketplace.visualstudio.com/items?itemName=badwrong.easybrackets"
          external={true}
        />
      </footer>
    </ProjectCard>
    <ProjectCard client:load coverText="johndoe.work">
      <h3>
        AI-assisted resume tuning to help your resume rank better in applicant
        tracking systems
      </h3>
      <footer>
        <Link
          href="https://johndoe.work"
          text="Go to johndoe.work"
          external={true}
        />
        <p>SaaS development, Stripe, Go, Gemini AI</p>
      </footer>
    </ProjectCard>
    <ProjectCard
      client:load
      className="card--full"
      video="/video/Echo/Screencast.mp4"
    >
      <h3>
        Apple Music to Spotify service to transfer playlists between music
        providers
      </h3>
      <footer>SaaS development, Stripe payment, Go, HTMX</footer>
    </ProjectCard>
    <ProjectCard
      client:load
      className="card--full"
      imageFit="contain"
      imageAlt="Nutrients macOS application with nutritional data for Estonian groceries"
      images={[
        "/images/Nutrients/Nutrients-1@2x.png",
        "/images/Nutrients/Nutrients-2@2x.png",
        "/images/Nutrients/Nutrients-3@2x.png",
      ]}
    >
      <h3>
        Food and nutritional database for groceries in&nbsp;Estonia with data
        from the Institute for Health Development
      </h3>
      <footer>macOS programming</footer>
    </ProjectCard>
    <ProjectCard
      client:load
      className="card--tall"
      imageFit="contain"
      imageAlt="Baltic Energy Apple Watch application to track energy prices in Baltic states"
      imageWidth={55}
      images={[
        "/images/Baltic-Energy/BalticEnergy-44mm@2x.png",
        "/images/Baltic-Energy/BalticEnergy-complication@2x.png",
      ]}
    >
      <h3>
        Electricity and natural gas market prices for Estonia, Finland, Latvia,
        and Lithuania
      </h3>
      <footer>Apple Watch programming</footer>
    </ProjectCard>
  </main>
  <aside class="about">
    <section>
      <p>
        <em>Bad & Wrong</em> is a&nbsp;one-person software engineering shop based
        in&nbsp;Tartu, founded in 2021 by Ihar Suvorau.
      </p>
      <p>
        If you are interested in a&nbsp;collaboration, please contact at&nbsp;<em
          >info@badwrong.dev</em
        >.
      </p>
    </section>
  </aside>
</Layout2>
